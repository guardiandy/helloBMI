<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.hellobmi.SQLActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="產生資料庫"
        android:id="@+id/SQL_create_button"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:id="@+id/SQL_insert_button"
        android:textSize="30sp"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/SQL_deletetable_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUERY"
        android:id="@+id/SQL_query_button"
        android:textSize="30sp"
        android:layout_alignTop="@+id/SQL_insert_button"
        android:layout_toEndOf="@+id/SQL_insert_button"
        android:layout_marginStart="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刪除資料庫"
        android:id="@+id/SQL_delete_button"
        android:textSize="30sp"
        android:layout_below="@+id/SQL_create_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建立資料表"
        android:id="@+id/SQL_createtable_button"
        android:textSize="30sp"
        android:layout_below="@+id/SQL_delete_button"
        android:layout_alignStart="@+id/SQL_delete_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刪除資料表"
        android:id="@+id/SQL_deletetable_button"
        android:textSize="30sp"
        android:layout_below="@+id/SQL_createtable_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日期"
        android:id="@+id/textView7"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:layout_below="@+id/SQL_deletetable_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="姓名"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/日期"
        android:layout_toEndOf="@+id/日期" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/日期"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/姓名"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空"
        android:id="@+id/SQL_clear_button"
        android:textSize="20dp"
        android:layout_below="@+id/SQL_deletetable_button"
        android:layout_toEndOf="@+id/SQL_deletetable_button" />

</RelativeLayout>
