<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.hellobmi.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高"
        android:textSize = "44sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_height_text"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:width="150dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="體重"
        android:textSize = "44sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/main_height_text"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ｍain_ｗeight_text"
        android:layout_alignParentStart="true"
        android:width="150dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的BMI值是"
        android:textSize="44sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/ｍain_ｗeight_text"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="計算"
        android:textSize="44sp"
        android:id="@+id/ｍain_BMI_button"
        android:layout_below="@+id/main_bmiValue_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/main_bmiValue_text"
        android:width="150dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建議"
        android:textSize="44sp"
        android:id="@+id/main_BMI_sugget_button"
        android:layout_below="@+id/ｍain_BMI_button"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="食物"
        android:textSize="44sp"
        android:id="@+id/main_BMI_about_button"
        android:onClick="onClick"
        android:layout_alignTop="@+id/main_BMI_sugget_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打卡"
        android:id="@+id/main_punch_button"
        android:layout_alignBottom="@+id/main_BMI_sugget_button"
        android:layout_alignEnd="@+id/ｍain_BMI_button"
        android:textSize="44sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQL"
        android:textSize="44sp"
        android:id="@+id/main_SQL_button"
        android:layout_alignTop="@+id/ｍain_BMI_button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
